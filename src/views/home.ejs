<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div style="margin: 20px; width: 1500px; margin: auto">
      <h1>Hello this is homepage</h1>
      <!-- <img src="images/1.jpg" alt="" width="600" height="600"> -->
      <div
        style="
          display: flex;
          justify-content: center;
          justify-content: space-between;
        "
      >
        <!--use JSON.stringify(listuser) to display data type JSON-->
        <h3>List user</h3>
        <a href="/create-user"
          ><button class="btn btn-primary">Create new user</button></a
        >
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% listuser.forEach(function(user) { %>
            <td><%=user.id%></td>
            <td><%=user.name%></td>
            <td><%=user.email%></td>
            <td><%=user.address%></td>
            <td>
              <button class="btn btn-danger">Delete</button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
    crossorigin="anonymous"
  ></script>
</html>
