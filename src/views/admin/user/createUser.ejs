<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Manage User</title>

  <link href="/admin/css/styles.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script>
    $(document).ready(() => {
      const avatarFile = $("#avatarFile");
      avatarFile.change(function (e) {
        const imgURL = URL.createObjectURL(e.target.files[0]);
        $("#avatarPreview").attr("src", imgURL);
        $("#avatarPreview").css({ "display": "block" });
      });
    });
  </script>
</head>

<body class="sb-nav-fixed">
  <!-- Header -->
  <%- include('../layout/header.ejs'); -%>
    <div id="layoutSidenav">
      <!-- Sidebar -->
      <%- include('../layout/sidebar.ejs'); -%>
        <div id="layoutSidenav_content">
          <main>
            <div class="container-fluid px-4">
              <h1 class="mt-4">Manage Users</h1>
              <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active">
                  <a href="/admin/user">User</a>
                </li>
              </ol>
              <div>
                <form action="/admin/handle-create-user" method="post" enctype="multipart/form-data">
                  <div style="width: 600px; margin: auto">

                    <h3 class="mb-3" style="margin-top: 20px">
                      Create a new user
                    </h3>
                    <div class="mb-3">
                      <label class="form-label">Full Name:</label>
                      <input class="form-control" name="fullName" placeholder="your name" />
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Email:</label>
                      <input type="email" class="form-control" name="email" placeholder="your email" />
                      <div class="row mt-3">
                        <div class="mb-3 col-6">
                          <label class="form-label">Phone:</label>
                          <input class="form-control" name="phone" placeholder="your phone" />
                        </div>
                        <div class="mb-3 col-6">
                          <label class="form-label">Role:</label>
                          <select name="role" class="form-select">
                            <option selected disabled>Choose a role</option>
                            <% roles.forEach((role,index)=> { %>
                              <option value="<%- role.id %>">
                                <%- role.name %>
                              </option>
                              <%})%>
                          </select>

                        </div>
                      </div>
                      <div class="mb-3">
                        <label for="formFile" class="form-label">Avatar</label>
                        <input name="avatar" class="avatar form-control" type="file" id="avatarFile" accept=".png, .jpg, .jpeg">
                      </div>
                      <img style="max-height: 350px; display: none;" alt="avatar preview" id="avatarPreview" />

                      <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" rows="3" name="address"></textarea>
                        <div class="mt-3 float-end">
                          <a href="/">
                            <button class="btn btn-secondary" type="submit">
                              Back
                            </button>
                          </a>
                          <button class="btn btn-primary" type="submit">
                            Create
                          </button>
                        </div>
                      </div>
                    </div>
                </form>
              </div>
            </div>
          </main>
          <%- include('../layout/footer.ejs'); -%>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
</body>

</html>