<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Detail User</title>

    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    <!-- Header -->
    <%- include('../layout/header.ejs'); -%>
        <div id="layoutSidenav">
            <!-- Sidebar -->
            <%- include('../layout/sidebar.ejs'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Detail product</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active">
                                    <a href="/admin/product">Product</a>
                                </li>
                            </ol>
                            <div>
                                <form action="/admin/handle-update-product" method="post" enctype="multipart/form-data">
                                    <div style="width: 600px; margin: auto">
                                        <h3 class="mb-3" style="margin-top: 20px">
                                            Create a new product
                                        </h3>
                                        <div class="mb-3 col-6">
                                            <input class="d-none" name="id" value="<%= product.id %>" />
                                        </div>
                                        <div class="row">
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Name:</label>
                                                <input class="form-control" name="name" value="<%= product.name %>" />
                                            </div>
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Price:</label>
                                                <input class="form-control" name="price" value="<%= product.price %>" />
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Detail Description:</label>
                                            <textarea class="form-control" rows="3"
                                                name="detailDesc"><%= product.detailDesc %></textarea>
                                        </div>

                                        <div class="row">
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Short Description:</label>
                                                <input class="form-control" name="shortDesc"
                                                    value="<%= product.shortDesc %>" />
                                            </div>
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Quantity:</label>
                                                <input class="form-control" name="quantity"
                                                    value="<%= product.quantity %>" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Factory</label>
                                                <select name="factory" class="form-select">
                                                    <% factoryOptions.forEach((factory,index)=> { %>
                                                        <option value="<%= factory.value %>"
                                                            <%=factory.value===product.factory ? 'selected' : '' %>>
                                                            <%- factory.name %>
                                                        </option>
                                                        <%})%>
                                                </select>
                                            </div>
                                            <div class="mb-3 col-6">
                                                <label class="form-label">Target</label>
                                                <select name="target" class="form-select">
                                                    <% targetOptions.forEach((target,index)=> { %>
                                                        <option value="<%= target.value %>"
                                                            <%=target.value===product.target ? 'selected' : '' %>>
                                                            <%- target.name %>
                                                        </option>
                                                        <%})%>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="mb-3">
                                            <label for="formFile" class="form-label">Image:</label>
                                            <input name="image" class="avatar form-control" type="file" id="avatarFile"
                                                accept=".png, .jpg, .jpeg">
                                        </div>
                                        <% if(product.image){ %>
                                            <img style="max-height: 300px; display: block;" alt="image preview"
                                                id="avatarPreview" src="/images/product/<%=product.image%>" />
                                            <% } else{ %>
                                                <img style="max-height: 300px; display: none;" alt="image preview"
                                                    id="avatarPreview" />
                                                <% } %>
                                                    <div class="mt-3 float-end">
                                                        <a href="/">
                                                            <button class="btn btn-secondary" type="submit">
                                                                Back
                                                            </button>
                                                        </a>
                                                        <button class="btn btn-warning" type="submit">
                                                            Update
                                                        </button>
                                                    </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer.ejs'); -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>